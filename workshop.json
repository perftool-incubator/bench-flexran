{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
	    {
	        "name": "default",
	        "requirements": [
                "dpdk_dependancies",
                "pyyaml"
	        ]
	    }
    ],
    "requirements": [
	    {
            "name": "dpdk_dependancies",
            "type": "distro",
            "distro_info": {
            "packages": [
               "numactl-devel",
               "libhugetlbfs-devel",
               "ethtool",
               "net-tools",
               "xz"
            ]
            }
        },
        {
            "name": "pyyaml",
            "type": "manual",
            "manual_info": {
                "commands": [
                    "if command -v pip3.9; then pip3.9 install pyyaml lxml; else echo 'pip3.9 not found'; fi",
                    "if command -v pip3; then pip3 install pyyaml lxml; else echo 'pip3 not found'; fi"
                ]
            }
        }
    ]
}
